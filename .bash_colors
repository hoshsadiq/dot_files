#!/usr/bin/env bash
## Primary color names

_color_black="\e[0;30m"
_color_red="\e[0;31m"
_color_green="\e[0;32m"
_color_yellow="\e[0;33m"
_color_blue="\e[0;34m"
_color_magenta="\e[0;35m"
_color_cyan="\e[0;36m"
_color_white="\e[0;37m"

# Bright color names
_color_bright_black="\e[1;30m"
_color_bright_red="\e[1;31m"
_color_bright_green="\e[1;32m"
_color_bright_yellow="\e[1;33m"
_color_bright_blue="\e[1;34m"
_color_bright_magenta="\e[1;35m"
_color_bright_cyan="\e[1;36m"
_color_bright_white="\e[1;37m"

# background
_color_bg_black="\e[;40m"
_color_bg_red="\e[;41m"
_color_bg_green="\e[;42m"
_color_bg_yellow="\e[;43m"
_color_bg_blue="\e[;44m"
_color_bg_magenta="\e[;45m"
_color_bg_cyan="\e[;46m"
_color_bg_white="\e[;47m"
_color_bg_reset="\e[;49m"

_color_end="\e[m"

# testing function
color_test() {
   ## normal
   ### foregrounds
   echo -e "FOREGROUNDS"
   echo -e "Black = ${_color_black}this is Black${_color_end}"
   echo -e "Red = ${_color_red}this is Red${_color_end}"
   echo -e "Green = ${_color_green}this is Green${_color_end}"
   echo -e "Yellow = ${_color_yellow}this is Yellow${_color_end}"
   echo -e "Blue = ${_color_blue}this is Blue${_color_end}"
   echo -e "Magenta = ${_color_magenta}this is Magenta${_color_end}"
   echo -e "Cyan = ${_color_cyan}this is Cyan${_color_end}"
   echo -e "White = ${_color_white}this is White${_color_end}"

   ## bright
   ### foregrounds
   echo -e "\nBright FOREGROUNDS"
   echo -e "Black = ${_color_bright_black}this is BrightBlack${_color_end}"
   echo -e "Red = ${_color_bright_red}this is BrightRed${_color_end}"
   echo -e "Green = ${_color_bright_green}this is BrightGreen${_color_end}"
   echo -e "Yellow = ${_color_bright_yellow}this is BrightYellow${_color_end}"
   echo -e "Blue = ${_color_bright_blue}this is BrightBlue${_color_end}"
   echo -e "Magenta = ${_color_bright_magenta}this is BrightMagenta${_color_end}"
   echo -e "Cyan = ${_color_bright_cyan}this is BrightCyan${_color_end}"
   echo -e "White = ${_color_bright_white}this is BrightWhite${_color_end}"

   ## backgrounds
   echo -e "\nBACKGROUNDS"
   echo -e "Black = ${_color_bg_black}this is Black${_color_end}"
   echo -e "Red = ${_color_bg_red}this is Red${_color_end}"
   echo -e "Green = ${_color_bg_green}this is Green${_color_end}"
   echo -e "Yellow = ${_color_bg_yellow}this is Yellow${_color_end}"
   echo -e "Blue = ${_color_bg_blue}this is Blue${_color_end}"
   echo -e "Magenta = ${_color_bg_magenta}this is Magenta${_color_end}"
   echo -e "Cyan = ${_color_bg_cyan}this is Cyan${_color_end}"
   echo -e "White = ${_color_bg_white}this is White${_color_end}"
}