#!/usr/bin/env bash
## Primary color names
COLOR_BLACK="\033[0;30m"
COLOR_RED="\033[0;31m"
COLOR_GREEN="\033[0;32m"
COLOR_YELLOW="\033[0;33m"
COLOR_BLUE="\033[0;34m"
COLOR_MAGENTA="\033[0;35m"
COLOR_CYAN="\033[0;36m"
COLOR_WHITE="\033[0;37m"
COLOR_RESET="\033[0;39m"

# Bright color names
COLOR_BRIGHT_BLACK="\033[1;30m"
COLOR_BRIGHT_RED="\033[1;31m"
COLOR_BRIGHT_GREEN="\033[1;32m"
COLOR_BRIGHT_YELLOW="\033[1;33m"
COLOR_BRIGHT_BLUE="\033[1;34m"
COLOR_BRIGHT_MAGENTA="\033[1;35m"
COLOR_BRIGHT_CYAN="\033[1;36m"
COLOR_BRIGHT_WHITE="\033[1;37m"

# background
COLOR_BG_BLACK="\033[;40m"
COLOR_BG_RED="\033[;41m"
COLOR_BG_GREEN="\033[;42m"
COLOR_BG_YELLOW="\033[;43m"
COLOR_BG_BLUE="\033[;44m"
COLOR_BG_MAGENTA="\033[;45m"
COLOR_BG_CYAN="\033[;46m"
COLOR_BG_WHITE="\033[;47m"
COLOR_BG_RESET="\033[;49m"


# user color
if [[ ${USER} == "root" ]]; then
   COLOR_USER=${COLOR_RED} # User is root.
elif [[ ${USER} != $(logname) ]]; then
   COLOR_USER=${COLOR_BRIGHT_RED} # User is not login user.
else
   COLOR_USER=${COLOR_BRIGHT_CYAN} # User is normal (well ... most of us are).
fi

# testing function
color_test() {
   ## normal
   ### foregrounds
   echo -e "FOREGROUNDS"
   echo -e "Black = ${COLOR_BLACK}this is Black${COLOR_RESET}"
   echo -e "Red = ${COLOR_RED}this is Red${COLOR_RESET}"
   echo -e "Green = ${COLOR_GREEN}this is Green${COLOR_RESET}"
   echo -e "Yellow = ${COLOR_YELLOW}this is Yellow${COLOR_RESET}"
   echo -e "Blue = ${COLOR_BLUE}this is Blue${COLOR_RESET}"
   echo -e "Magenta = ${COLOR_MAGENTA}this is Magenta${COLOR_RESET}"
   echo -e "Cyan = ${COLOR_CYAN}this is Cyan${COLOR_RESET}"
   echo -e "White = ${COLOR_WHITE}this is White${COLOR_RESET}"

   ## bright
   ### foregrounds
   echo -e "\nBright FOREGROUNDS"
   echo -e "Black = ${COLOR_BRIGHT_BLACK}this is BrightBlack${COLOR_RESET}"
   echo -e "Red = ${COLOR_BRIGHT_RED}this is BrightRed${COLOR_RESET}"
   echo -e "Green = ${COLOR_BRIGHT_GREEN}this is BrightGreen${COLOR_RESET}"
   echo -e "Yellow = ${COLOR_BRIGHT_YELLOW}this is BrightYellow${COLOR_RESET}"
   echo -e "Blue = ${COLOR_BRIGHT_BLUE}this is BrightBlue${COLOR_RESET}"
   echo -e "Magenta = ${COLOR_BRIGHT_MAGENTA}this is BrightMagenta${COLOR_RESET}"
   echo -e "Cyan = ${COLOR_BRIGHT_CYAN}this is BrightCyan${COLOR_RESET}"
   echo -e "White = ${COLOR_BRIGHT_WHITE}this is BrightWhite${COLOR_RESET}"

   ## backgrounds
   echo -e "\nBACKGROUNDS"
   echo -e "Black = ${COLOR_BG_BLACK}this is Black${COLOR_RESET}"
   echo -e "Red = ${COLOR_BG_RED}this is Red${COLOR_RESET}"
   echo -e "Green = ${COLOR_BG_GREEN}this is Green${COLOR_RESET}"
   echo -e "Yellow = ${COLOR_BG_YELLOW}this is Yellow${COLOR_RESET}"
   echo -e "Blue = ${COLOR_BG_BLUE}this is Blue${COLOR_RESET}"
   echo -e "Magenta = ${COLOR_BG_MAGENTA}this is Magenta${COLOR_RESET}"
   echo -e "Cyan = ${COLOR_BG_CYAN}this is Cyan${COLOR_RESET}"
   echo -e "White = ${COLOR_BG_WHITE}this is White${COLOR_RESET}"
}