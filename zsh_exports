export GOPATH=$HOME/Workspace
export PYENV="$HOME/Workspace/pyenv"

ANDROID_BIN_PATH=$HOME/apps/android-bin/

# possible different for mac
PIP_LOCAL_BIN="$HOME/.local/bin"

export PATH=$HOME/bin:$PATH
export PATH=$JAVA_HOME/bin:$PATH
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$ANDROID_BIN_PATH
export PATH=$PATH:$PIP_LOCAL_BIN

export ZSH="$HOME/.oh-my-zsh"

# Highlight less
export LESSOPEN="| /usr/share/source-highlight/src-hilite-lesspipe.sh %s"
export LESS=' -R'

export LC_ALL=en_GB.UTF-8
export LANG=en_GB.UTF-8
export LOCALE=en_GB.UTF-8

# editor
export EDITOR='vim'
export GIT_EDITOR="$EDITOR"

export HISTCONTROL=ignoredups

# X Server display
export DISPLAY=:0.0

# GBT
export GBT_CAR_DIR_DEPTH='2'
export GBT_RCARS='Time'
export GBT_CAR_SIGN_WRAP='1'

if [ "$OSTYPE" = "cygwin" ]; then
	export CYGWIN="ntsec"
fi
